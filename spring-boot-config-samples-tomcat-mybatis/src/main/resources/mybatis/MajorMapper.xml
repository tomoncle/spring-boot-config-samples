<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tomoncle.app.mybatis.mapper.MajorMapper">
    <!--映射数据库字段与类属性-->
    <resultMap id="MajorMap" type="com.tomoncle.app.mybatis.entity.Major">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--list-->
    <select id="list" resultMap="MajorMap">
        SELECT * FROM t_major WHERE 1=1
        <if test="name!=null">
            AND name LIKE CONCAT('%',#{name},'%')
        </if>
    </select>

    <!--get-->
    <select id="get" resultMap="MajorMap">
        SELECT *
        FROM t_major
        WHERE id = #{id}
    </select>

</mapper>