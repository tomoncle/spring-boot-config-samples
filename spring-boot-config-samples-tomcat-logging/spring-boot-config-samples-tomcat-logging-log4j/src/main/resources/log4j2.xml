<Configuration status="debug" strict="true" name="XMLConfigTest">
    <Appenders>
        <Appender type="Console" name="STDOUT">
            <Layout type="PatternLayout"
                    pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight{%6p} -- %style{[%15.15t]}{bright,magenta} %style{%-40.40logger{39}}{bright,cyan} %highlight{:-->} %m%n"
            />
        </Appender>
    </Appenders>
    <Loggers>
        <!-- 自定义包的输出级别 -->
        <Logger name="org.apache.logging.log4j" level="INFO">
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <!-- 默认配置 -->
        <Root level="TRACE">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>

</Configuration>